@model Core_R47.Models.teachers
@{
    ViewBag.Title = "ShowClassName";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Show Class Name</h2>
@using (Html.BeginForm())
{
    <h2>Select Student</h2>
    @Html.DropDownList("LastName", (IEnumerable<SelectListItem>)ViewBag.DDLProducts)
    <input type="submit" value="Show" class="btn btn-primary" />
}
<hr />
Show: @ViewBag.StLastName
<hr />
@if (ViewBag.StLastName != null)
{
    <table class="table">
        <tr><th>id</th><th>Last name</th><th>First Mid Name</th><th></th></tr>
        @foreach (var item in ViewBag.allstudents)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.LastName</td>
                <td>@item.FirstMidName</td>
                <td>
                    <a asp-controller="teachers" asp-action="edit" asp-route-id="@item.ID">EditStudents</a>
                </td>
            </tr>
        }
    </table>
}

